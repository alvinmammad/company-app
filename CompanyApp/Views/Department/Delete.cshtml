@model CompanyApp.Models.Department

@{
    ViewData["Title"] = "Delete";
}




<div class="text-center" style="margin-bottom:70px;">
    <h1 class="display-4">Are you sure you want to delete this?</h1>
</div>
<div class="container">

    <div class="row">
        <dl class="row">
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.DepName)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.DepName)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.DepManagerName)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.DepManagerName)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.DepManagerSurname)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.DepManagerSurname)
            </dd>
        </dl>

    </div>
    <div class="row">
        <form asp-action="Delete">
            <input type="hidden" asp-for="ID" />
            <input type="submit" value="Delete" class="btn btn-danger removeDep" data-href="/Department/Index" /> |
            <a asp-action="Index">Back to list</a>
        </form>
    </div>
   
</div>
